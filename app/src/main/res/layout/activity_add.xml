<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.contactdemo.AddActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#b1377c93"
        android:src="@drawable/ic_person_white_36dp"
        android:id="@+id/imageView" />

    <ImageButton
        android:id="@+id/add_left_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_reply_all_white_18dp"
        android:background="@color/colorPrimary"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
       />

    <ImageButton
        android:id="@+id/add_right_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_done_all_white_18dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增联系人"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/add_right_btn"
        android:layout_toEndOf="@+id/add_left_btn" />

    <ImageView
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/im_add_name"
        android:src="@drawable/ic_person_grey_18dp"
        android:layout_below="@+id/imageView"
         />

    <EditText
        android:hint="@string/add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ed_add_name"
        android:layout_alignBottom="@+id/im_add_name"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/im_add_phone"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_call_black_18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/im_add_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="@string/add_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ed_add_phone"
        android:layout_alignBottom="@+id/im_add_phone"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/im_add_email"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email_black_18dp"
        android:layout_below="@+id/im_add_phone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:hint="@string/ann_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ed_add_email"
        android:layout_alignBottom="@+id/im_add_email"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
