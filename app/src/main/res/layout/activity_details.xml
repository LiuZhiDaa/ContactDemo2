<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#05b0ff"
        android:src="@drawable/ic_person_white_36dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/details_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_reply_all_white_18dp"
        android:background="#05b0ff"/>

    <ImageButton
        android:id="@+id/details_image2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete_white_18dp"
        android:background="#05b0ff"/>

    <ImageButton
        android:id="@+id/details_image3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_mode_edit_white_18dp"
        android:background="#05b0ff"
        android:layout_alignBottom="@+id/details_image2"
        android:layout_toStartOf="@+id/details_image2" />


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_call_blue_18dp"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/detail_imgbtn" />

        <TextView
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/details_phone"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/detail_imgbtn"
            android:layout_toEndOf="@+id/detail_imgbtn" />

        <TextView
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/detail_imgbtn" />

        <ImageButton

            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:src="@drawable/ic_message_white_18dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView" />
    </RelativeLayout>




</RelativeLayout>
